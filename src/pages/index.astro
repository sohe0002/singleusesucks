  <script defer>
    const tobii = new Tobii();

    // Generel funktion til at håndtere elementets bevægelse
    function handleMouseMove(e, hoverBox) {
      const boxRect = hoverBox.getBoundingClientRect();
      const offsetX = e.clientX - boxRect.left;
      const offsetY = e.clientY - boxRect.top;

      // Bestem, hvor meget elementet skal flytte sig
      const moveDistance = 100; // Flyt 50px væk fra cursoren

      // Beregn ny position, flytter væk fra midten
      const newX = offsetX > boxRect.width / 2 ? -moveDistance : moveDistance;
      const newY = offsetY > boxRect.height / 2 ? -moveDistance : moveDistance;

      // Flyt elementet
      hoverBox.style.transform = `translate(${newX}px, ${newY}px)`;
    }

    // Tilføj bevægelseshåndtering til et element
    function addHoverEffect(hoverBox) {
      hoverBox.addEventListener("mousemove", (e) =>
        handleMouseMove(e, hoverBox)
      );

      // Reset position ved mouseleave
      hoverBox.addEventListener("mouseleave", () => {
        hoverBox.style.transform = "translate(0, 0)";
      });
    }

    // Hent alle de elementer, der skal have denne hover-effekt
    const hoverBoxes = [
      document.getElementById("hoverBox2"),
      document.getElementById("hoverBox3"),
      document.getElementById("hoverBox4"),
      document.getElementById("hoverBox5"),
      document.getElementById("hoverBox6"),
      document.getElementById("hoverBox7"),
    ];

    // Tilføj hover-effekt til alle elementerne
    hoverBoxes.forEach((hoverBox) => {
      if (hoverBox) {
        addHoverEffect(hoverBox);
      }
    });
  </script>

